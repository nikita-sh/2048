<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context="com.example.shume.game2048.StartingActivity">

    <TextView
        android:id="@+id/GameText"
        android:layout_width="wrap_content"
        android:layout_height="105dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:gravity="center"
        android:text="@string/welcome_to_2048"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textColor="#000000"
        android:textSize="22sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="102dp"
        tools:layout_editor_absoluteY="0dp" />

    <Button
        android:id="@+id/StartButton"
        android:layout_width="140dp"
        android:layout_height="50dp"
        android:layout_alignEnd="@+id/ScoreButton"
        android:layout_alignRight="@+id/ScoreButton"
        android:layout_below="@+id/GameText"
        android:background="@drawable/round_button"
        android:shape="oval"
        android:text="@string/new_game"
        android:textColor="#ffffff"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="122dp"
        tools:layout_editor_absoluteY="145dp" />

    <Button
        android:id="@+id/LoadButton"
        android:layout_width="140dp"
        android:layout_height="50dp"
        android:layout_below="@+id/StartButton"
        android:layout_toLeftOf="@+id/StartButton"
        android:layout_toStartOf="@+id/StartButton"
        android:background="@drawable/round_button"
        android:text="@string/load_saved"
        android:textColor="#ffffff"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="122dp"
        tools:layout_editor_absoluteY="212dp" />

    <Button
        android:id="@+id/SaveButton"
        android:layout_width="140dp"
        android:layout_height="50dp"
        android:layout_below="@+id/LoadButton"
        android:background="@drawable/round_button"
        android:text="@string/save_game"
        android:textColor="#ffffff"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="122dp"
        tools:layout_editor_absoluteY="337dp" />

    <Button
        android:id="@+id/ScoreButton"
        android:layout_width="140dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/SaveButton"
        android:background="@drawable/round_button"
        android:text="@string/leaderboard"
        android:textAlignment="center"
        android:textColor="#ffffff"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="122dp"
        tools:layout_editor_absoluteY="397dp" />

</android.support.constraint.ConstraintLayout>